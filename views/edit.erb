<div class="edit-box">

  <div class="edit-title">
    <h1>Edit Post</h1>
  </div>

  <form class='back form' action="/post/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="edit-amount">
      <label for="">I have</label>
      <input type="text" name="amount" value="<%= @post.amount %>" placeholder="amount">
    </div>
    <div class="edit-curr-from">
      <select name="curr_from">
        <option value="euro">Euro</option>
        <option value="audollar">AU Dollar</option>
        <option value="usdollar">US Dollar</option>
        <option value="chinese_yuan">Chinese Yuan</option>
      </select>
    </div>
    <div class="edit-curr-to">
      <label for="">and I need</label>
      <select name="curr_to" value= "<%= @post.curr_to %>">
        <option value="euro">Euro</option>
        <option value="audollar">AU Dollar</option>
        <option value="usdollar">US Dollar</option>
        <option value="chinese_yuan">Chinese Yuan</option>
      </select>
    </div>
    <div class="edit-before">
      <label for="">Before the</label>
      <input type="date" name="before_date" value="<%= @post.before_date %>">
    </div>
    <div class="edit-city">
      <label for="">I live in</label>
      <input type="text" name="city" value='<%= @post.city %>'>
    </div>
    <div class="edit-comment">
      <label>Comment:</label>
      <input type="text" name="comment" value='<%= @post.comment %>'>
    </div>
    <div class="edit-btn">
      <button>Edit</button>
    </div>
  </form>
</div>
