<h1>Matching Request</h1>

<div class="list_item">
  <% @posts.each do |post| %>

      <p>I have: <%= post['amount'] %> <%= post['curr_from']%> and I want <%= post['curr_to'] %> </p>
        <% if post[:before_date] != nil && post[:before_date] > Date.today%>
          <p>before the <%= post['before_date'] %> </p>
        <% end %>

        <% if post[:comment] != nil%>
          <p>Comment: <%= post['comment'] %></p>
        <% end %>
      <hr>

  <% end %>

</div>
